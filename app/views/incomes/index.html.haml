- content_for :links do
  %ul.breadcrumbs.span6
    %li
      %span Ingresos


%header
  .row-fluid
    .span6
      %h1 Ingresos
    .span6.links
      %a#quick-income-link.btn(href="javascript:;")
        %i.icon-bolt
        Ingreso r√°pido

      = link_to new_income_path, class: 'btn' do
        %i.icon-plus-sign
        Nuevo ingreso

.row-fluid
  = render 'incomes/quick_income'

= paginate @incomes.page(@page)

%ul.unstyled.listing
  - @incomes.each do |income|
    - income = present income
    %li.row-fluid
      .span4
        %h4
          = link_to income, income
        = income.has_error_label
        %h5
          %i.icon-user(title="Contacto" rel='tooltip')
          = income.contact
        .clear-both
        = income.state_tag
        %i= l income.date
      .span3
        = income.due_date_tag
        .clear-both
        = income.creator_label
        = income.approver_label
        = income.nuller_label
      .span4
        .span2
          .muted Total
        .span4
          = currency_label income.currency
          = ntc income.total

        .span2
          .muted Saldo
        .span4
          = currency_label income.currency
          = ntc income.balance
      .span1
        = link_to icon_edit, edit_income_path(income), class: 'dark'
