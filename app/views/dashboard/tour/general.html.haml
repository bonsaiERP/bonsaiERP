:javascript
  $(function() {
    function generalTour() {
      $('#general-aspects').show();
      var t = new Plugin.Bride('#tour');
      t.init();
    }

    if($.cookie('bonsai-new-user-#{current_user.id}') ) {
      var val = $.cookie('bonsai-new-user-#{current_user.id}') * 1;
      if(val < 2) {
        generalTour();
        $.cookie('bonsai-new-user-#{current_user.id}', val + 1);
      }
    }else {
      $.cookie('bonsai-new-user-#{current_user.id}', 0);
    }

    $('#help-link-general').click(function() {
      $('#general-aspects').show();
      var t = new Plugin.Bride('#tour-graph');
      t.init();
    });
  })
